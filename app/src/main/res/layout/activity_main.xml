<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hacktivity.dicecalc.MainActivity">


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <EditText
            android:id="@+id/calc_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_columnSpan="3"
            android:layout_rowSpan="2"
            android:layout_span="5"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="ex: 5d20+8"
            android:inputType="text"

            android:textSize="24sp"
            android:textIsSelectable="false"
            android:textAlignment="textEnd" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/backspace"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClickBackspace"
            android:text="DELETE" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/d20"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="d20" />

        <Button
            android:id="@+id/d12"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="d12" />

        <Button
            android:id="@+id/d10"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="d10" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/d8"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="d8" />

        <Button
            android:id="@+id/d6"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="d6" />

        <Button
            android:id="@+id/d4"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="d4" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/n7"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="7" />

        <Button
            android:id="@+id/n8"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="8" />

        <Button
            android:id="@+id/n9"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="9" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/n4"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="4" />

        <Button
            android:id="@+id/n5"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="5" />

        <Button
            android:id="@+id/n6"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="6" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/n1"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="1" />

        <Button
            android:id="@+id/n2"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="2" />

        <Button
            android:id="@+id/n3"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="3" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/minus"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="-" />

        <Button
            android:id="@+id/n0"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="0" />

        <Button
            android:id="@+id/plus"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:onClick="calcButtonClick"
            android:text="+" />
    </TableRow>

    <TextView
        android:id="@+id/tvnully"
        android:layout_gravity="left|top"
        android:layout_weight="1"
        android:text="" />

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvnull2"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/nGO"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:onClick="calcButtonRoll"
            android:text="ROLL"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </TableRow>

</TableLayout>
